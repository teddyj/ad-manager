# Environment Variables for Campaign Builder

# Fal.ai API Configuration
# Get your API key from: https://fal.ai/dashboard
VITE_FAL_API_KEY=your_fal_ai_api_key_here

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Feature flags
VITE_ENABLE_BACKGROUND_CHANGE=true

# Campaign Flow V2 Features
VITE_NEW_CAMPAIGN_FLOW=true
VITE_PLATFORM_INTEGRATIONS=false
VITE_AUDIENCE_SYNC=false
VITE_CREATIVE_AI=true

# Database Configuration
# Set to true to use database instead of localStorage
VITE_USE_DATABASE=false
# Set to true to enable data migration from localStorage
VITE_MIGRATE_EXISTING_DATA=true
# Set to true to show migration UI in development
VITE_SHOW_MIGRATION_UI=true

# Supabase Configuration
# Get your project details from: https://supabase.com/dashboard
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database URL for Prisma
DATABASE_URL="postgresql://username:password@localhost:5432/campaign_builder"

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Optional: Custom API endpoints (use defaults if not specified)
# VITE_FAL_API_ENDPOINT=https://fal.run/fal-ai/image-editing/background-change 